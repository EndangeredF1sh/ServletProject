<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         metadata-complete="false" version="4.0">
    <servlet>
        <!-- 类名 -->
        <servlet-name>SessionTrack</servlet-name>
        <!-- 所在的包 -->
        <servlet-class>com.Javaweb.Servlet.SessionTrack</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionTrack</servlet-name>
        <!-- 访问的网址 -->
        <url-pattern>/TomcatTest/com.Javaweb.Servlet.SessionTrack</url-pattern>
    </servlet-mapping>
    <servlet>
        <!-- 类名 -->
        <servlet-name>changePersonalInfoServlet</servlet-name>
        <!-- 所在的包 -->
        <servlet-class>com.Javaweb.Servlet.changePersonalInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changePersonalInfoServlet</servlet-name>
        <!-- 访问的网址 -->
        <url-pattern>/changePersonalInfoServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 类名 -->
        <servlet-name>changePasswordServlet</servlet-name>
        <!-- 所在的包 -->
        <servlet-class>com.Javaweb.Servlet.changePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changePasswordServlet</servlet-name>
        <!-- 访问的网址 -->
        <url-pattern>/changePasswordServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 类名 -->
        <servlet-name>changeQueryServlet</servlet-name>
        <!-- 所在的包 -->
        <servlet-class>com.Javaweb.Servlet.changeQueryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changeQueryServlet</servlet-name>
        <!-- 访问的网址 -->
        <url-pattern>/changeQueryServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>com.Javaweb.Filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
